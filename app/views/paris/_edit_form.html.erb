
    <%= form_for(@paris) do |f| %>
      <%= f.text_field :name, placeholder: 'Your Name here' %>
      <%= f.text_field :image, placeholder: 'Your Image here' %>
      <%= f.text_field :flight, placeholder: 'Your Flight here' %>
      <%= f.text_field :flight_date, placeholder: 'Your Flight Date here' %>
      <%= f.text_field :address, placeholder: 'Your Address here' %>
      <%= f.text_field :profile_image, placeholder: 'Your Profile Image here' %>
      <%= f.submit 'Edit your trip' %>
    <%end %>
