<!-- carousel -->
<div id="myCarousel" class="carousel slide homeslider" data-ride="carousel">
 <ol class="carousel-indicators">
   <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
   <li data-target="#myCarousel" data-slide-to="1"></li>
   <li data-target="#myCarousel" data-slide-to="2"></li>
 </ol>

 <!-- Wrapper for slides -->
 <div class="carousel-inner full-screen">
   <div class="item active">
     <img class="center-block img-fluid full-screen" src="https://68.media.tumblr.com/12c5f33ffa9a36b2524a215913ee0706/tumblr_op2xhfqRfi1qerjyso1_1280.png" alt="First slide">
   </div>

   <div class="item">
     <img class="center-block img-fluid full-screen" src="<%=image_path('paris-photo-2.png')%>" alt="second slide">
   </div>

   <div class="item">
     <img class="center-block img-fluid full-screen" src="<%=image_path('paris-photo-3.png')%>" alt="Third slide">
   </div>
 </div>
</div>

<!-- Left and right controls -->
<a class="left carousel-control" href="#myCarousel" data-slide="prev" style="margin-top: 50px;">
 <span class="glyphicon glyphicon-chevron-left"></span>
 <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" data-slide="next" style="margin-top: 50px;">
 <span class="glyphicon glyphicon-chevron-right"></span>
 <span class="sr-only">Next</span>
</a>


